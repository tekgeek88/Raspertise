@model Raspertise.Models.Advertisement

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-light">Edit</h1>

<h4 class="text-light">Advertisement</h4>
<hr/>
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        @* 8 rows used for the form *@
        <form asp-action="Edit">

            <div class="form-group">
                <div class="form-row">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id"/>
                </div>


                <div class="form-row">
                    <div class="col-2">
                        <label asp-for="LocationId" class="control-label text-light"></label>
                        <select asp-for="LocationId" class="form-control" asp-items="ViewBag.LocationId"></select>
                        <span asp-validation-for="LocationId" class="text-danger text-light"></span>
                    </div>
                    <div class="col-1"></div>
                    <div class="col-2">
                        <label asp-for="SponsorId" class="control-label text-light"></label>
                        <select asp-for="SponsorId" class="form-control" asp-items="ViewBag.SponsorId"></select>
                        <span asp-validation-for="SponsorId" class="text-danger"></span>
                    </div>
                    <div class="col-1"></div>
                    <div class="col-1">
                        <label asp-for="Color" class="control-label text-light"></label>
                        <input type="color" onchange="processColor()" id="colorInput" asp-for="Color" class="form-control  px-0 py-0"/>
                        <span asp-validation-for="Color" class="text-danger"></span>
                    </div>
                    <div class="col-1"></div>
                    <div class="col-3">
                        <label asp-for="Speed" class="control-label text-light"></label>
                        <input type="range" id="sliderSpeed" min="1" max="5" value="@Model.Speed" asp-for="Speed" class="form-control"/>
                        <span asp-validation-for="Speed" class="text-danger"></span>
                    </div>
                    <div class="col-1 my-auto px-0 py-0 text-center">
                        <label for="sliderSpeed" class="text-light " id="numSpeed">@Model.Speed</label>
                    </div>
                </div>
                @* End first row *@
            </div>


            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-12">
                        <label asp-for="Message" class="control-label text-light"></label>
                        <input asp-for="Message" class="form-control"/>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="form-row">
                    <div class="col-4">
                        <label asp-for="DateStart" class="control-label text-light"></label>
                        <input type="date" asp-for="DateStart" class="form-control"/>
                        <span asp-validation-for="DateStart" class="text-danger"></span>
                    </div>
                    <div class="col-1"></div>
                    <div class="col-4">
                        <label asp-for="DateStop" class="control-label text-light"></label>
                        <input type="date" asp-for="DateStop" class="form-control"/>
                        <span asp-validation-for="DateStop" class="text-danger"></span>
                    </div>
                    <div class="col-1"></div>
                    <div class="col-2">
                        <label asp-for="TotalCost" class="control-label text-light"></label>
                        <input asp-for="TotalCost" class="form-control"/>
                        <span asp-validation-for="TotalCost" class="text-danger text-light"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-8"></div>
                    <div class="col-md-4">
                        <div class="btn-group">
                            <button class="btn btn-secondary mx-4" asp-action="Index">Back to List</button>
                            <input type="submit" value="Save" class="btn btn-primary"/>
                        </div>
                    </div>
                </div>
            </div>
        </form>
        @* End of form Div *@
        <div class="col-md-2"></div>
    </div>
</div>