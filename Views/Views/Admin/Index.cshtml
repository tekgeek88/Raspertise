@using Raspertise.Models

@model IEnumerable<AppUser>

<div class="text-danger" asp-validation-summary="ModelOnly"></div>

<div class="bg-primary m-1 p-1 text-white">
    <h4>User Accounts</h4>
</div>

<div class="container">
    <div class="row justify-content-md-center bg-dark m-auto">
        <table class="table table-dark table-striped-2 table-responsive w-auto">
            <thead>
            <tr>
                <th>ID</th><th>UserName</th><th>Email</th>
            </tr>
            </thead>
            @if (Model.Count() == 0) {
                <tr>
                    <td colspan="3" class="text-center">No User Accounts</td>
                </tr>
            }
            else {
                foreach (AppUser user in Model) {
                    <tr>
                        <td>@user.Id</td> <td>@user.UserName</td> <td>@user.Email</td>

                    </tr>
                    <tr>
                        <td colspan="3">
                            <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            }
        </table>
    </div>
</div>

<div class="container p-2">
    <a class="btn btn-primary" asp-action="Create">Create</a>
</div>