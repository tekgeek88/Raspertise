@model Raspertise.Models.Location

@{
    ViewData["Title"] = "Edit";
}

<div class="bg-primary m-1 p-1 text-white">
    <h1>Edit Location</h1>
</div>

<div class="container h-100">
    <div class="row align-items-center p-5">
        <div class="col-6 mx-auto">

            <div class="card bg-dark rounded">
                <div class="card-title w-100">

                    <div class="bg-primary text-white w-100 p-2">
                        <h4 class="text-light">Location</h4>
                    </div>
                    <div class="card-body">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="AdvertiserId"/>
                            <div class="form-group">
                                <label asp-for="AdvertiserId" class="control-label text-light"></label>
                                <select asp-for="AdvertiserId" class="form-control" asp-items="ViewBag.AdvertiserId"></select>
                                <span asp-validation-for="AdvertiserId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description" class="control-label text-light"></label>
                                <input asp-for="Description" class="form-control"/>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="PricePerDay" class="control-label text-light"></label>
                                <input asp-for="PricePerDay" class="form-control"/>
                                <span asp-validation-for="PricePerDay" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-primary"/>
                                <a class="btn btn-sm btn-info" asp-action="Index">Back to List</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>