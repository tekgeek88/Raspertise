@model IEnumerable<Raspertise.Models.Location>

@{
    ViewData["Title"] = "Index";
}

<div class="bg-primary m-1 p-1 text-white">
    <h4>All registered locations</h4>
</div>

<div class="container">
    <div class="row justify-content-md-center bg-dark m-auto">
        <table class="table table-dark table-striped-2 table-responsive w-auto table-bordered">
            <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PricePerDay)
                </th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PricePerDay)
                    </td>
                    <tr>
                        <td colspan="2">
                            <a class="btn btn-sm btn-primary " asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a>
                            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>


<div class="container p-2">
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</div>